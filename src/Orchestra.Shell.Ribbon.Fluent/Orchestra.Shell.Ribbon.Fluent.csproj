<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net5.0-windows</TargetFrameworks>
    <AssemblyName>Orchestra.Shell.Ribbon.Fluent</AssemblyName>
    <RootNamespace>Orchestra</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>WolvenKit.Shell.Ribbon.FluentMahApps</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>Orchestra shell using Fluent ribbon library.</Description>
    <PackageTags>orc;orchestra;wpf;xaml;shell;ribbon;fluent</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <UseWpf>true</UseWpf>
    <UseWindowsForms>true</UseWindowsForms>
    <ExtrasEnableImplicitWpfReferences>true</ExtrasEnableImplicitWpfReferences>
    <ExtrasEnableImplicitWinFormsReferences>true</ExtrasEnableImplicitWinFormsReferences>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>BD65929C-36C0-4935-8D03-9AB82684C56D</ProjectGuid>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>WildGums</Authors>
    <PackageReleaseNotes>this is a custom test version for WolvenKit All credits go to the original Author.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Catel.Fody" Version="4.6.0" PrivateAssets="all" />
    <PackageReference Include="Costura.Fody" Version="4.1.0" PrivateAssets="all" />
    <PackageReference Include="Fluent.Ribbon" Version="8.0.3" />
    <PackageReference Include="Fody" Version="6.3.0" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="HandyControls" Version="3.1.1" />
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="4.5.0" PrivateAssets="all" />
    <PackageReference Include="MahApps.Metro" Version="2.4.3" />
    <PackageReference Include="MethodTimer.Fody" Version="3.1.2" PrivateAssets="all" />
    <PackageReference Include="ModuleInit.Fody" Version="2.1.1" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="5.2.1" PrivateAssets="all" />
    <PackageReference Include="Syncfusion.SfSkinManager.WPF" Version="19.1.0.63" />
    <PackageReference Include="Syncfusion.Shared.WPF" Version="19.1.0.63" />
    <PackageReference Include="Syncfusion.Themes.MaterialDark.WPF" Version="19.1.0.63" />
    <PackageReference Include="Syncfusion.Tools.WPF" Version="19.1.0.63" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Orchestra.Core\Orchestra.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Orchestra.Shell.Shared\**\*.cs">
      <Link>%(RecursiveDir)%(FileName)%(Extension)</Link>
    </Compile>
    <Compile Remove="..\Orchestra.Shell.Shared\Properties\**" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>
